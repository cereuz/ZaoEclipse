<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/btn_xmlseralizer_show"
        android:onClick="saveSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xmlSera_saveAndShow"/>
    <Button 
        android:id="@+id/btn_xmlseralizer_seralizer"
        android:onClick="seralizerSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xmlSera_saveAndShow"/>
    <Button 
        android:id="@+id/btn_xmlparser"
        android:onClick="parseSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xmlParse_Show"/>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_sms_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

</LinearLayout>
