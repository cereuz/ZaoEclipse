<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_margin="@dimen/activity_margin">
    
    <EditText 
        android:id="@+id/et_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>
 <EditText 
     android:id="@+id/et_login_password"
     android:layout_below="@id/et_login_username"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:inputType="textPassword"/>
 
 <CheckBox 
     android:id="@+id/cb_login_rem"
     android:text="@string/cbtext_login_rem"
     android:layout_below="@id/et_login_password"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>
    
 <Button 
     android:id="@+id/btn_login_in"
     android:layout_below="@id/et_login_password"
     android:layout_alignEnd="@+id/et_login_password"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/text_login_in"/>
 <Button 
     android:id="@+id/btn_login_context"
     android:layout_below="@id/btn_login_in"
     android:layout_alignEnd="@+id/et_login_password"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/text_login_in"/>
 <Button 
     android:id="@+id/btn_login_context2"
     android:layout_below="@id/btn_login_context"
     android:layout_alignEnd="@+id/et_login_password"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/text_login_in"/>
 <Button 
     android:id="@+id/btn_login_sdcard"
     android:layout_below="@id/btn_login_context2"
     android:layout_alignEnd="@+id/et_login_password"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/text_login_in"/>
 <Button 
     android:id="@+id/btn_login_sdcard_context"
     android:layout_below="@id/btn_login_sdcard"
     android:layout_alignEnd="@+id/et_login_password"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/text_login_in"/>
</RelativeLayout>
