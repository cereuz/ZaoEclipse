<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >
    
    <com.onezao.onezao.newstoclient.MySmartImageView
        android:id="@+id/iv_newstoclient_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"        
        android:src="@drawable/ic_launcher"/>
    
     <TextView 
        android:id="@+id/tv_newstoclient_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我在马路边，你人在哪里？这条路，应该如何走下去"
        android:singleLine="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="6dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_newstoclient_icon"       />
    
    <TextView 
        android:id="@+id/tv_newstoclient_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="我在马路边，你人在哪里？这条路，应该如何走下去,我在马路边，你人在哪里？"
        android:maxLines="2"
        android:textSize="12sp"
        android:textColor="#999999"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_newstoclient_icon"
         android:layout_below="@id/tv_newstoclient_title"/>
    
    <TextView 
        android:id="@+id/tv_newstoclient_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟贴"
        android:textSize="12sp"
        android:textColor="#ff0000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_alignBottom="@id/tv_newstoclient_description"/>

</RelativeLayout>
