<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp" >
    <EditText 
        android:id="@+id/et_musicplayer_0111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/musicpath"/>
    <ImageView 
        android:id="@+id/iv_music_0111"
        android:layout_below="@id/et_musicplayer_0111"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:onClick="play"
        android:src="@drawable/button_play_32px"/>
    <SeekBar 
        android:id="@+id/sb_musicplayer_0111"
        android:layout_below="@id/iv_music_0111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
